<script type="text/javascript">
    function showDashboardMenu() {
        if ($('erp_menu_dashboard').hasClassName('active')) {
            $('erp_menu_dashboard').removeClassName('active');
        } else {
            $('erp_menu_dashboard').addClassName('active');
        }
    }
</script>