        <referenceBlock name="webpos_cart_block">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="webpos_cart" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="webpos_cart_items" xsi:type="array">
                                    <item name="component" xsi:type="string">Magestore_Webpos/js/view/checkout/cart/items</item>
                                    <item name="displayArea" xsi:type="string">webpos_cart_items</item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
